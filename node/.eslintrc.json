{
	"env": {
		//"commonjs": true,
		//"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base", "plugin:prettier/recommended"],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"rules": {
		"no-console": "off",
		"no-alert": "off",
		//"class-methods-use-this": "off",
		//"import/first": "off",
		//"no-param-reassign": "off",
		//"camelcase": "off",
		"prettier/prettier": [
			"error",
			{
				"useTabs": true,
				"tabWidth": 2,
				"printWidth": 80,
				"semi": true,
				"singleQuote": true,
				"trailingComma": "all",
				"bracketSpacing": true,
				"arrowParens": "avoid",
				"htmlWhitespaceSensitivity": "css"
			}
		]
	}
}
